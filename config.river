server "default" {
  log_level = "info"
}

metrics "default" {
  scrape_interval = "15s"

  scrape_configs {
    job_name = "prometheus"

    static_configs {
      targets = ["prometheus:9090"]
    }
  }

  remote_write {
    endpoint {
      url = env("GCLOUD_HOSTED_METRICS_URL")
      basic_auth {
        username = env("GCLOUD_HOSTED_METRICS_ID")
        password = env("GCLOUD_RW_API_KEY")
      }
    }
  }
}
